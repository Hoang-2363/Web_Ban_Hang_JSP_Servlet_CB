		<script>
			function xoa_HH(ma_hang) {
				if (confirm("Bạn có muốn xóa hàng hóa có mã HH_" + ma_hang
						+ " này không?")) {
					window.location = "xoahanghoa?ma_hang=" + ma_hang;
				}
			}
		</script>
